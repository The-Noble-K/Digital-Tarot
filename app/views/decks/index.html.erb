<p id="notice"><%= notice %></p>

<h1>Decks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Card name</th>
      <th>Image</th>
      <th>Meaning</th>
      <th>Reversal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @decks.each do |deck| %>
      <tr>
        <td><%= deck.card_name %></td>
        <td><%= deck.image %></td>
        <td><%= deck.meaning %></td>
        <td><%= deck.reversal %></td>
        <td><%= link_to 'Show', deck %></td>
        <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
        <td><%= link_to 'Destroy', deck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Deck', new_deck_path %>
